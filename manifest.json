{
  "manifest_version": 3,
  "name": "Deretention - YouTube Distraction Blocker",
  "version": "1.0",
  "description": "Block YouTube videos based on keywords to stay focused.",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": [],
      "run_at": "document_start"
    }
  ]
}
